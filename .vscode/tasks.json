{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Clean directory",
            "type": "shell",
            "command": "rm -f robot "
        },
        {
            "label": "Compile code",
            "type": "shell",
            "command": "docker run -e LOCAL_USER_ID=`id -u $USER` -it -v `pwd`:/src -w /src ev3dev/debian-stretch-cross sudo arm-linux-gnueabi-gcc -g -o robot robot.c",
            "dependsOn": [
                "Clean directory"
            ]
        },
        {
            "label": "Copy code",
            "type": "shell",
            "command": "scp robot robot@192.168.199.11:/home/robot/",
            "dependsOn": [
                "Compile code"
            ]
        },
        {
            "label": "Run",
            "type": "shell",
            "command": "ssh robot@192.168.199.11 './robot' ",
            "dependsOn": [
                "Copy code"
            ]
        },
    ]
}